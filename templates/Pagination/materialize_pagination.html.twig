{#
/**
 * @file
 * Materialize pagination control implementation.
 *
 * View that can be used with the pagination module
 * from the Materialize CSS
 * https://materializecss.com/pagination.html
 *
 * @author Leonardo Bressan Motyczka <leomoty@gmail.com>
 */
#}
{% if pageCount > 1 %}
	<ul class="pagination">
		

		{% if previous is defined %}
			<li class="waves-effect">
				<a rel="prev" href="{{ path(route, query|merge({(pageParameterName): previous})) }}">
					<i class="material-icons-left">préc</i>
				</a>
			</li>
		{% else %}
			<li class="disabled">
				<a href="#!">
					<i class="material-icons-left">préc</i>
				</a>
			</li>
		{% endif %}

		{% for page in pagesInRange %}
			{% if page != current %}
				<li class="waves-effect">
					<a href="{{ path(route, query|merge({(pageParameterName): page})) }}">{{ page }}</a>
				</li>
			{% else %}
				<li class="active">
					<a class="disable-hover" href="#!">{{ page }}</a>
				</li>
			{% endif %}
		{% endfor %}

		{% if next is defined %}
			<li class="waves-effect">
				<a rel="next" href="{{ path(route, query|merge({(pageParameterName): next})) }}">
					<i class="material-icons-right">suiv</i>
				</a>
			</li>
		{% else %}
			<li class="disabled">
				<a href="#!">
					<i class="material-icons-right">suiv</i>
				</a>
			</li>
		{% endif %}

		
		
	</ul>
{% endif %}
