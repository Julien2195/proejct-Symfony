{% extends 'security/baseAdmin.html.twig' %}

{% block title %}Posts
{% endblock %}

{% block body %}


	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ post.id }}</td>
			</tr>
			<tr>
				<th>Auteur</th>
				<td>{{ post.auteur }}</td>
			</tr>
			<tr>
				<th>Titre</th>
				<td>{{ post.titre }}</td>
			</tr>
			<tr>
				<th>Description</th>
				<td>{{ post.description }}</td>
			</tr>
			<tr>
				<th>Content</th>
				<td>{{ post.content }}</td>
			</tr>
			<tr>
				<th>Slug</th>
				<td>{{ post.slug }}</td>
			</tr>
			<tr>
				<th>Date</th>
				<td>{{ post.date ? post.date|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>Visible</th>
				<td>{{ post.visible ? 'Yes' : 'No' }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('app_posts_index') }}">back to list</a>

	<a href="{{ path('app_posts_edit', {'id': post.id}) }}">edit</a>

	{{ include('posts/_delete_form.html.twig') }}
{% endblock %}
