{% extends 'admin/baseAdmin.html.twig' %}
{% block title %}Utilisateurs
	<a href="{{ path('app_user_new') }}" class="btn btn-success">Cr√©er un utilisateur</a>


{% endblock %}
{% block body %}

	<table class="table">
		<thead>
			<tr>
				<th scope="col">ID</th>
				<th scope="col">Email</th>
				<th scope="col">Prenom</th>
				<th scope="col">Nom</th>
				<th scope="col">Roles</th>
				<th scope="col">Modifier</th>
				<th scope="col">Supprimer</th>

			</tr>
		</thead>
		<tbody>
			{% for user in users  %}
				<tr>
					<th scope="row">{{user.id}}</th>
					<td>{{user.email}}</td>
					<td>{{user.prenom}}</td>
					<td>{{user.nom}}</td>
					<td>

						{{user.roles[0]}}

					</td>
					<td>
						<a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-primary">Modifier</a>
					</td>
					<td>
						<form method="post" action="{{ path('app_user_delete', {'id': user.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
							<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
							<button type="submit" class="btn btn-danger">x</button>

						</form>

					</td>

				</tr>
			</td>
		{% endfor %}
	</tbody>
</table>{% endblock %}
