{% extends 'admin/baseAdmin.html.twig' %}


{% block body %}


	<section>
		{% block javascript %}
			<script src="{{ asset('assets/js/countCaracterePosts.js')}}"></script>
		{% endblock %}
		<div class="container login h-100">
			<div class="row d-flex justify-content-center align-items-center h-100">
				<div class="col-lg-12 col-xl-11">
					<div class="text-black" style="border-radius: 25px;">

						<p class="color-title-login text-center h2 fw-bold mb-5 mx-1 mx-md-4 mt-4">Editer l'article</p>


						{{ form_start(form) }}
						<div class="container-form-new">
							<label class="auteur" for="autor">Auteur :</label>

							<div class="d-flex flex-row align-items-center mb-4">
								<div class="form form-outline flex-fill mb-0">
									{{ form_widget(form.auteur)}}
									<span class="btn btn-success count-auteur">50</span>
								</div>
							</div>
						</div>
						<div class="container-form-new">
							<label class="titre" for="autor">Titre :</label>
							<div class="d-flex flex-row align-items-center mb-4">
								<div class="form-outline flex-fill mb-0">
									{{ form_widget(form.titre) }}
									<span class="btn btn-success count-titre">60</span>

								</div>
							</div>
						</div>
						<div class="container-form-new">
							<label for="autor">Image :</label>
							<div class="d-flex flex-row align-items-center mb-4">
								<div class="form-outline flex-fill mb-0">
									{{ form_widget(form.image) }}
								</div>
							</div>
						</div>
						<div class="container-form-new">
							<label class="description" for="autor">Description :</label>
							<div class="d-flex flex-row align-items-center mb-4">
								<div class="form-outline flex-fill mb-0">
									{{ form_widget(form.description) }}
									<span class="position btn btn-success count-description">300</span>
								</div>
							</div>
						</div>

						<div class="container-form-new">
							<label for="autor">Contenu :</label>
							<div class="d-flex flex-row align-items-center mb-4">

								<div class="form-outline flex-fill mb-0">
									{{ form_widget(form.content) }}
								</div>
							</div>
						</div>
						<div class="container-form-new">
							<label for="autor">Date :</label>
							<div class="d-flex flex-row align-items-center mb-4">

								<div class="form-outline flex-fill mb-0">
									{{ form_widget(form.date) }}
								</div>
							</div>
						</div>
						<div class="container-form-new form-switch">
							<label for="autor">Visible :</label>
							<div class="d-flex flex-row align-items-center mb-4">
								<div class="form-outline flex-fill mb-0">
									{{ form_widget(form.visible) }}
								</div>
							</div>
						</div>


						<div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">

							<button type="submit" class="btn btn-primary btn-lg">Editer l'article</button>
						</div>


						{{ form_end(form) }}

					</div>
				</div>
			</div>
		</div>
	</section>


	{# {{ include('user/_delete_form.html.twig') }} #}
{% endblock %}
