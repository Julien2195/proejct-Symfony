{% extends 'admin/baseAdmin.html.twig' %}

{% block title %}Articles
{% endblock %}

{% block body %}


	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Auteur</th>
				<th>Titre</th>
				<th>Description</th>
				<th>Content</th>
				<th>Slug</th>
				<th>Date</th>
				<th>Visible</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for post in pagination %}
				<tr>
					<td>{{ post.id }}</td>
					<td>{{ post.auteur }}</td>
					<td>{{ post.titre }}</td>
					<td>{{ post.description }}</td>
					<td>{{ post.content }}</td>
					<td>{{ post.slug }}</td>
					<td>{{ post.date ? post.date|date('Y-m-d H:i:s') : '' }}</td>
					<td>{{ post.visible ? 'Yes' : 'No' }}</td>
					<td>
						<a class="btn btn-secondary" href="{{ path('app_posts_show', {'id': post.id}) }}">Voir</a>
						<a class="btn btn-primary" href="{{ path('app_posts_edit', {'id': post.id}) }}">Modifier</a>

						<form method="post" action="{{ path('app_posts_delete', {'id': post.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
							<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ post.id) }}">
							<button class="btn btn-warning">Delete</button>
						</form>

					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="9">no records found</td>
				</tr>
			{% endfor %}

		</tbody>
	</table>
	<a class="btn btn-success" href="{{ path('app_posts_new') }}">Cr√©er un article</a>

	{{knp_pagination_render(pagination)}}

{% endblock %}
